<launch>
    <let name="urdf_path" value="$(find-pkg-share cognibot_description)/urdf/cognibot.urdf.xacro" />
    <let name="rviz_config" value="$(find-pkg-share cognibot_description)/rviz/urdf_config.rviz" />


    <node pkg="robot_state_publisher" exec="robot_state_publisher" >
        <param name="robot_description" 
                value="$(command 'xacro $(var urdf_path)')" />
    </node>

    
    <node pkg="ros_tcp_endpoint" exec="default_server_endpoint" />
  
    
    <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_config)">
      <param name="use_sim_time" value="true"/>
    </node>

    <include file="$(find-pkg-share cognibot_bringup)/launch/tec.launch.xml"/>


   


</launch>